<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h1>Add a New User</h1>
        </div>
    </div>
    <div class="card-body">
        <form action="/user/adduser" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="name">
            </div>
            <div class="form-group">
                <input type="text" name="lastname" class="form-control" placeholder="lastname">
            </div>

            <!-- scope-->
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Scope</label>
                <select class="form-select" style="width: 75%;" name="scope">
                    <option value="admin" selected>ADMIN</option>
                    <option value="user">BASIC USER</option>
                </select>
            </div>


            <div class="form-group">
                <input type="text" name="rut" class="form-control" placeholder="rut">
            </div>
            <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="email">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="password">
            </div>   
            <div class="form-group">
                <button class="btn btn-success btn-block">
                    Add a User
                </button>                
            </div> 
            <div class="form-group"><a href="/user/navigationuser" class="btn btn-secondary w-100">Back</a></div>  
        </form>
    </div>
</div>